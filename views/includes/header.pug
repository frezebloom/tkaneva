doctype html
html(lang='en')
head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    link(href='/stylesheets/style.css', rel='stylesheet')
    title Интернет магазин tkaneva.ru. Приятных Вам покупок!
body
    header(class="header")
      div(class='container')
        div(class='header-wrapper')
          div(class='header-logo')
            img(src="/images/logo.png", alt="TKANEVA")
          div(class="header-contact-phone") 8 (950) 000-52-59
        form(method="POST" action="#" class="header-search" name="header-search-form")
          img(src="/images/search-icon.svg", alt="Поиск")
          span(class="header-search-icon")
            input(type='text', placeholder='Поиск' name='header-search' class="header-search-field" autocomplete="off")
          input(type='submit', placeholder='Поиск' name='header-search' class="header-search-button" autocomplete="off")
        div(class='header-wrapper')
          ul(class='header-menu')
            li
              a(href='#') Оплата
            li
              a(href='#') Доставка
        div(class='header-wrapper')
          div(class='header-cart-link') Оформить заказ
        div(class='header-wrapper')
          div(class='header-shopping-cart-button')
            img(src="/images/shopping-cart.svg", alt="Корзина")